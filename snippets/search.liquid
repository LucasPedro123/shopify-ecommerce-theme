{%- doc -%}
  Renders the search action button.

  @param {string} [style] - The style of the search action.
  @param {string} [class] - Additional classes for the search action.

  @example
  {% render 'search', style: 'default', class: 'custom-class' %}
{%- enddoc -%}

{% unless style == 'none' %}
  <search-button
    class="search-action{% if class != blank %} {{ class | strip }}{% endif %}"
    on:click="#search-modal/showDialog"
  >
    <button
      on:click="#search-modal/showDialog"
      class="button button-unstyled search-modal__button header-actions__action"
      aria-label="{{ 'accessibility.open_search_modal' | t }}"
    >
      <span
        aria-hidden="true"
        class="svg-wrapper"
      >
        <img
          class="search-icon"
          src="https://images.tcdn.com.br/files/1322733/themes/65/img/settings/search-icon.svg?7f039d266115cec4e49f3e076e3fd112"
          alt="Ãcone de busca"
          width="20"
          height="20"
        >
      </span>
      <div
        type="search"
        class="search-action__input"
        placeholder="digite aqui o que procura..."
        aria-label="{{ 'content.search_input_label' | t }}"
      >
        <p>digite aqui o que procura...</p>
      </div>
    </button>
  </search-button>
{% endunless %}

{% stylesheet %}
  .header__column--left {
    width: max-content;
  }

  .search-action {
    margin-inline: 20px !important;
    --search-border-radius: var(--style-border-radius-inputs);
    --search-border-width: var(--style-border-width-inputs);
    display: flex;
    border: 1px solid var(--brand-primary);
    border-radius: 50px;
    flex-direction: row-reverse;
    width: 100%;
    height: 42px;
    display: flex;

    @media (max-width: 749px) {
      display: none;
    }

    .button {
      width: 100%;
      display: flex;
      justify-content: space-between;
      .svg-wrapper {
        img {
          width: 20px;
        }
      }

      .search-action__input {
        width: 100%;
        padding-left: 0px;
        font-weight: normal;
        font-size: 12px;
        line-height: 26px;
        color: #000000;
        background: none;
        border: none;
        text-align: left;
      }
    }
  }

  .header__column--center .search-action {
    width: auto;
    flex-grow: 1;
  }

  :is(.header__column--left, .header__column--center) .search-action {
    width: max-content;
    @media screen and (min-width: 750px) {
      margin-inline: calc(var(--padding-lg) * -1);
    }
  }

  .header__column--right .search-action {
    @media screen and (min-width: 750px) {
      margin-inline: calc(var(--gap-md) * -1) calc(var(--gap-xs) * -1);
    }
  }
{% endstylesheet %}
